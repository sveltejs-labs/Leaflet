{
	"name": "@svelte-labs/leaflet",
	"version": "0.0.1",
	"description": "Leaflet wrapper for Svelte",
	"keywords": [
		"svelte",
		"sveltekit",
		"wrapper",
		"leaflet",
		"gis",
		"map"
	],
	"homepage": "https://www.npmjs.com/package/@sveltejs-labs/leaflet",
	"author": "Minsoo Choo <minsoochoo0122@proton.me>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sveltejs-labs/Leaflet.git"
	},
	"bugs": {
		"url": "https://github.com/sveltejs-labs/Leaflet/issues"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run && npm run test:e2e",
		"test:e2e": "playwright test",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"peerDependencies": {
		"geojson": "^0.5.0",
		"leaflet": "^1.9.4",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.6",
		"@eslint/compat": "^1.2.7",
		"@eslint/js": "^9.23.0",
		"@playwright/test": "^1.51.1",
		"@storybook/addon-essentials": "^8.6.9",
		"@storybook/addon-svelte-csf": "^5.0.0-next.28",
		"@storybook/blocks": "^8.6.9",
		"@storybook/experimental-addon-test": "^8.6.9",
		"@storybook/svelte": "^8.6.9",
		"@storybook/sveltekit": "^8.6.9",
		"@storybook/test": "^8.6.9",
		"@sveltejs/adapter-auto": "^5.0.0",
		"@sveltejs/kit": "^2.20.2",
		"@sveltejs/package": "^2.3.10",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/svelte": "^5.2.7",
		"@types/leaflet": "^1.9.17",
		"@types/node": "^22.13.13",
		"@vitest/browser": "^3.0.9",
		"@vitest/coverage-v8": "^3.0.9",
		"eslint": "^9.23.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.3.3",
		"geojson": "^0.5.0",
		"globals": "^16.0.0",
		"jsdom": "^26.0.0",
		"leaflet": "^1.9.4",
		"playwright": "^1.51.1",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"publint": "^0.3.9",
		"storybook": "^8.6.9",
		"svelte": "^5.25.3",
		"svelte-check": "^4.1.5",
		"typescript": "^5.8.2",
		"typescript-eslint": "^8.28.0",
		"vite": "^6.2.3",
		"vitest": "^3.0.9"
	}
}
